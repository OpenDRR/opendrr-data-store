-- create scenario risk building indicators
DROP VIEW IF EXISTS results_float.dsra_sim6p8_cr2022_rlz_0_b0_scenario_rupture CASCADE;
CREATE VIEW results_float.dsra_sim6p8_cr2022_rlz_0_b0_scenario_rupture AS 

-- 4.0 Earthquake Risk
-- 4.1 Scenario Hazard
-- 4.1.1 Scenario Rupture
SELECT 
a."AssetID",
f.source_type AS "Source_Type",
f.rupture_name AS "Rupture_Name",
f.magnitude AS "Magnitude",
f.rake AS "Rake",
CAST(ROUND(CAST(f.lon AS NUMERIC),6) AS FLOAT) AS "Hypo_Lon",
CAST(ROUND(CAST(f.lat AS NUMERIC),6) AS FLOAT) AS "Hypo_Lat",
CAST(ROUND(CAST(f.depth AS NUMERIC),6) AS FLOAT) AS "Hypo_Depth",
CAST(ROUND(CAST(d."vs_lon" AS NUMERIC),6) AS FLOAT) AS "vs30_Lon",
CAST(ROUND(CAST(d."vs_lat" AS NUMERIC),6) AS FLOAT) AS "vs30_Lat",
CAST(ROUND(CAST(d.vs30 AS NUMERIC),6) AS FLOAT) AS "vs30",
e.site_id AS "SiteID",
CAST(ROUND(CAST(e.lon AS NUMERIC),6) AS FLOAT) AS "SiteID_Lon",
CAST(ROUND(CAST(e.lat AS NUMERIC),6) AS FLOAT) AS "SiteID_Lat",
a."Realization" AS "Realization",
a."gmpe_Model" AS "gmpe_Model",
CAST(ROUND(CAST(a."Weight" AS NUMERIC),6) AS FLOAT) AS "Weight",
b.geom

FROM dsra.dsra_sim6p8_cr2022_rlz_0 a
LEFT JOIN psra.canada_exposure b ON a."AssetID" = b.id 
--LEFT JOIN lut.retrofit_costs c ON b.eqbldgtype = c."Eq_BldgType"
LEFT JOIN lut.vs30_bc_site_model_xref d ON a."AssetID" = d.id
LEFT JOIN lut.gmfdata_sitemesh_sim6p8_cr2022_37_xref e on b.id = e.id
LEFT JOIN ruptures.rupture_table f on f.rupture_name = a."Rupture_Abbr";


