-- create physical exposure indicators
DROP VIEW IF EXISTS results_text.canada_exposure_replacement_cost CASCADE;
CREATE VIEW results_text.canada_exposure_replacement_cost AS 

-- 2.0 Physical Exposure
-- 2.1 Buildings
-- 2.1.2 Replacement Cost
SELECT 
a.id AS "AssetID",
CAST(CAST(CAST(ROUND(CAST(a.structural AS NUMERIC),6) AS FLOAT) AS NUMERIC) AS TEXT) AS "StrCost",
CAST(CAST(CAST(ROUND(CAST(a.nonstructural AS NUMERIC),6) AS FLOAT) AS NUMERIC) AS TEXT) AS "NStrCost",
CAST(CAST(CAST(ROUND(CAST(a.contents AS NUMERIC),6) AS FLOAT) AS NUMERIC) AS TEXT) AS "ContCost",
CAST(CAST(CAST(ROUND(CAST(a.structural + a.nonstructural + a.contents AS NUMERIC),6) AS FLOAT) AS NUMERIC) AS TEXT) AS "AssetCost",
CAST(CAST(CAST(ROUND(CAST(a.structural + a.nonstructural AS NUMERIC),6) AS FLOAT) AS NUMERIC) AS TEXT) AS "BldgCost",
CAST(CAST(CAST(ROUND(CAST(b."CAD_RetrofitCost_Bldg" AS NUMERIC),6) AS FLOAT) AS NUMERIC) AS TEXT) AS "RetrofitCost",
a.geom

FROM psra.canada_exposure a
LEFT JOIN lut.retrofit_costs b ON a.eqbldgtype = b."Eq_BldgType";


-- create physical exposure indicators
DROP VIEW IF EXISTS results_text.canada_exposure_building_occupancy CASCADE;
CREATE VIEW results_text.canada_exposure_building_occupancy AS 

-- 2.0 Physical Exposure
-- 2.3 Buildings
-- 2.3.1 Building Occupancy
SELECT 
a.id AS "AssetID",
CAST(CAST(CAST(ROUND(CAST(a.day AS NUMERIC),6) AS FLOAT) AS NUMERIC) AS TEXT) AS "DayPop",
CAST(CAST(CAST(ROUND(CAST(a.night AS NUMERIC),6) AS FLOAT) AS NUMERIC) AS TEXT) AS "NightPop",
CAST(CAST(CAST(ROUND(CAST(a.transit AS NUMERIC),6) AS FLOAT) AS NUMERIC) AS TEXT) AS "TransitPop",
a.geom

FROM psra.canada_exposure a;