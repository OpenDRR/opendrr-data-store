SUM(a."sD_Complete_r1")/5 AS "sD_RedTag_i" ,
SUM(a."sC_Repair_r1")/(SUM(b.number)) AS "sC_Repair_t",
SUM(a."sC_Construxn_r1")/(SUM(b.number)) AS "SC_Construxn_t",
SUM(a."sC_Downtime_r1")/(SUM(b.number)) AS "sC_Downtime_total",
SUM(a."sC_DebrisBW_r1") AS "sC_Debris_bw",
SUM(a."sC_DebrisC_r1") AS "sC_Debris_cs",
SUM(a."sC_DebrisBW_r1" + a."sC_DebrisC_r1") AS "sC_Debris_total",
g.geom AS "geom_poly",
g.geompoint AS "geom_point"

FROM dsra.dsra_sim6p8_cr2022_rlz_0 a
