CREATE VIEW results_float.dsra_sim6p8_cr2022_rlz_0_r1_recovery_agg_view AS 

-- 4.0 Earthquake Risk
-- 4.2 Building Performance
-- 4.2.3 Recovery
SELECT 
b.sauid AS "Sauid",
f.source_type AS "Source_Type",
f.rupture_name AS "Rupture_Name",
f.magnitude AS "Magnitude",
'r1' AS "Retrofit",
SUM(a."sD_None_r1" + a."sD_Slight_r1") AS "sD_GreenTag_b",
SUM(a."sD_None_r1" + a."sD_Slight_r1")/5 AS "sD_GreenTag_i",
SUM(a."sD_Extensive_r1") AS "sD_YellowTag_d",
SUM(a."sD_Extensive_r1")/2.5 AS "sD_YellowTag_i",
