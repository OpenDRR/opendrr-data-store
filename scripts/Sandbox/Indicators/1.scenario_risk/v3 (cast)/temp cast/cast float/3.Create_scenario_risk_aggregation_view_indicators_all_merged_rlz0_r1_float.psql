-- create scenario risk building indicators
DROP VIEW IF EXISTS results_float.dsra_sim6p8_cr2022_rlz_0_r1_economic_loss_agg_view;
CREATE VIEW results_float.dsra_sim6p8_cr2022_rlz_0_r1_economic_loss_agg_view AS 

-- 4.0 Earthquake Risk
-- 4.4 Economic Security
-- 4.4.1 Economic Loss
SELECT
b.sauid AS "Sauid",
f.source_type AS "Source_Type",
f.rupture_name AS "Rupture_Name",
f.magnitude AS "Magnitude",
'r1' AS "Retrofit",
SUM(b.structural + b.nonstructural + b.contents) AS "AssetCostT",
SUM(b.structural + b.nonstructural) AS "BldgCostT",
(COALESCE((AVG(a."sL_Str_r1" + a."sL_NStr_r1"))/ NULLIF(AVG((a."sL_Str_r1" + a."sL_NStr_r1" + a."sL_Cont_r1")),0),0)) AS "sL_LossRatio",
SUM(a."sL_Str_r1" + a."sL_NStr_r1" + a."sL_Cont_r1") AS "sL_AssetLoss",
SUM(a."sL_Str_r1" + a."sL_NStr_r1") AS "sL_BldgLoss",
SUM(a."sL_Str_r1") AS "sL_StrLoss",
SUM(a."sL_NStr_r1") AS "sL_NStrLoss",
SUM(a."sL_Cont_r1") AS "sL_ContLoss",
g.geom AS "geom_poly",
g.geompoint AS "geom_point"

FROM dsra.dsra_sim6p8_cr2022_rlz_0 a
LEFT JOIN psra.canada_exposure b ON a."AssetID" = b.id 
--LEFT JOIN lut.retrofit_costs c ON b.eqbldgtype = c."Eq_BldgType"
--LEFT JOIN lut.vs30_bc_site_model_xref d ON a."AssetID" = d.id
--LEFT JOIN lut.gmfdata_sitemesh_sim6p8_cr2022_37_xref e on b.id = e.id
LEFT JOIN ruptures.rupture_table f on f.rupture_name = a."Rupture_Abbr"
LEFT JOIN boundaries."Geometry SAUID" g on b.sauid = g."SAUIDt"
GROUP BY b.sauid, g.geom, g.geompoint, f.source_type, f.rupture_name, f.magnitude;