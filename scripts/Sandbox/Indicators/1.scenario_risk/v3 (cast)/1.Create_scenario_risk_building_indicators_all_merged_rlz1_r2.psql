-- create scenario risk building indicators
DROP VIEW IF EXISTS results.dsra_sim6p8_cr2022_rlz_1_r2_economic_loss CASCADE;
CREATE VIEW results.dsra_sim6p8_cr2022_rlz_1_r2_economic_loss AS 

-- 4.0 Earthquake Risk
-- 4.4 Economic Security
-- 4.4.1 Economic Loss
SELECT
a."AssetID",
a."Rupture_Abbr",
f.magnitude AS "Source_Mag",
'r2' AS "Retrofit_Level",
a."Realization" AS "RealizationID", 
CAST(a."sL_Str_r2" + a."sL_NStr_r2" + a."sL_Cont_r2" AS NUMERIC) AS "sL_Asset",
CAST(a."sL_Str_r2" + a."sL_NStr_r2" AS NUMERIC) AS "sL_Bldg",
CAST(COALESCE((a."sL_Str_r2" + a."sL_NStr_r2") / NULLIF((a."sL_Str_r2" + a."sL_NStr_r2" + a."sL_Cont_r2"),0),0) AS NUMERIC) AS "sL_BldgRatio",
CAST(a."sL_Str_r2" AS NUMERIC) AS "sL_Str",
CAST(a."sL_Str_stdv_r2" AS NUMERIC) AS "sL_Str_stdv",
CAST(a."sL_NStr_r2" AS NUMERIC) AS "sL_NStr",
CAST(a."sL_NStr_stdv_r2" AS NUMERIC) AS "sL_NStr_stdv",
CAST(a."sL_Cont_r2" AS NUMERIC) AS "sL_Cont",
CAST(a."sL_Cont_stdv_r2" AS NUMERIC) AS "sL_Cont_stdv",
CAST(a."sL_Fatalities_r2" AS NUMERIC) AS "sL_Fatality",
CAST(a."sL_Fatalities_stdv_r2" AS NUMERIC) AS "sL_Fatality_stdv",
b.geom

FROM dsra.dsra_sim6p8_cr2022_rlz_1 a
LEFT JOIN psra.canada_exposure b ON a."AssetID" = b.id 
--LEFT JOIN lut.retrofit_costs c ON b.eqbldgtype = c."Eq_BldgType"
--LEFT JOIN lut.vs30_bc_site_model_xref d ON a."AssetID" = d.id
--LEFT JOIN lut.gmfdata_sitemesh_sim6p8_cr2022_37_xref e on b.id = e.id
LEFT JOIN ruptures.rupture_table f on f.rupture_name = a."Rupture_Abbr";