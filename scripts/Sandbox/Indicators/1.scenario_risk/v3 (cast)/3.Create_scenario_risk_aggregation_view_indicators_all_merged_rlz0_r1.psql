DROP VIEW IF EXISTS results.dsra_sim6p8_cr2022_rlz_0_r1_recovery_agg_view;
CREATE VIEW results.dsra_sim6p8_cr2022_rlz_0_r1_recovery_agg_view AS 

-- 4.0 Earthquake Risk
-- 4.2 Building Performance
-- 4.2.3 Recovery
SELECT 
b.sauid AS "Sauid",
f.source_type AS "Source_Type",
f.rupture_name AS "Rupture_Name",
f.magnitude AS "Magnitude",
'r1' AS "Retrofit",
CAST(SUM(a."sD_None_r1" + a."sD_Slight_r1") AS NUMERIC) AS "sD_GreenTag_b",
CAST(SUM(a."sD_None_r1" + a."sD_Slight_r1")/5 AS NUMERIC) AS "sD_GreenTag_i",
CAST(SUM(a."sD_Extensive_r1") AS NUMERIC) AS "sD_YellowTag_d",
CAST(SUM(a."sD_Extensive_r1")/2.5 AS NUMERIC) AS "sD_YellowTag_i",
CAST(SUM(a."sD_Complete_r1") AS NUMERIC) AS "sD_RedTag_b",
CAST(SUM(a."sD_Complete_r1")/5 AS NUMERIC) AS "sD_RedTag_i" ,
CAST(SUM(a."sC_Repair_r1")/(SUM(b.number)) AS NUMERIC) AS "sC_Repair_t",
CAST(SUM(a."sC_Construxn_r1")/(SUM(b.number)) AS NUMERIC) AS "SC_Construxn_t",
CAST(SUM(a."sC_Downtime_r1")/(SUM(b.number)) AS NUMERIC) AS "sC_Downtime_total",
CAST(SUM(a."sC_DebrisBW_r1") AS NUMERIC) AS "sC_Debris_bw",
CAST(SUM(a."sC_DebrisC_r1") AS NUMERIC) AS "sC_Debris_cs",
CAST(SUM(a."sC_DebrisBW_r1" + a."sC_DebrisC_r1") AS NUMERIC) AS "sC_Debris_total",
g.geom AS "geom_poly",
g.geompoint AS "geom_point"

FROM dsra.dsra_sim6p8_cr2022_rlz_0 a
LEFT JOIN psra.canada_exposure b ON a."AssetID" = b.id 
--LEFT JOIN lut.retrofit_costs c ON b.eqbldgtype = c."Eq_BldgType"
--LEFT JOIN lut.vs30_bc_site_model_xref d ON a."AssetID" = d.id
--LEFT JOIN lut.gmfdata_sitemesh_sim6p8_cr2022_37_xref e on b.id = e.id
LEFT JOIN ruptures.rupture_table f on f.rupture_name = a."Rupture_Abbr"
LEFT JOIN boundaries."Geometry SAUID" g on b.sauid = g."SAUIDt"
GROUP BY b.sauid, g.geom, g.geompoint, f.source_type, f.rupture_name, f.magnitude;


