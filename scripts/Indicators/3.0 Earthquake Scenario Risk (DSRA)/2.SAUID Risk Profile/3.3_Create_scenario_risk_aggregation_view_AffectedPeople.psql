CAST(SUM(a."sC_CasTransitL2_b0") AS NUMERIC) AS "sCt_CasTrn_mod_b0",
CAST(SUM(a."sC_CasTransitL3_b0") AS NUMERIC) AS "sCt_CasTrn_ser_b0",
CAST(SUM(a."sC_CasTransitL4_b0") AS NUMERIC) AS "sCt_CasTrn_crit_b0",

-- 3.3.1 Casualties - r2
CAST(SUM(a."sL_Fatalities_r2") AS NUMERIC) AS "sLt_Fatality_r2",
CAST(AVG(a."sL_Fatalities_stdv_r2") AS NUMERIC) AS "sLtsd_Fatality_r2",
CAST(SUM(a."sC_CasDayL1_r2") AS NUMERIC) AS "sCt_CasDay_min_r2",
CAST(SUM(a."sC_CasDayL2_r2") AS NUMERIC) AS "sCt_CasDay_mod_r2",
CAST(SUM(a."sC_CasDayL3_r2") AS NUMERIC) AS "sCt_CasDay_ser_r2",
CAST(SUM(a."sC_CasDayL4_r2") AS NUMERIC) AS "sCt_CasDay_crit_r2",
