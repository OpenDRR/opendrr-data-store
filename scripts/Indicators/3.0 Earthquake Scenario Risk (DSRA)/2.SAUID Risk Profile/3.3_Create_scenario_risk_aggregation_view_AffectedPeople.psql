-- 3.0 Earthquake Scenario Risk (DSRA)
-- 3.3 Affected People
SELECT 
b.sauid AS "Sauid",

-- 3.3.1 Casualties - b0
CAST(SUM(a."sL_Fatalities_b0") AS NUMERIC) AS "sLt_Fatality_b0",
CAST(AVG(a."sL_Fatalities_stdv_b0") AS NUMERIC) AS "sLtsd_Fatality_b0",
CAST(SUM(a."sC_CasDayL1_b0") AS NUMERIC) AS "sCt_CasDay_min_b0",
CAST(SUM(a."sC_CasDayL2_b0") AS NUMERIC) AS "sCt_CasDay_mod_b0",
CAST(SUM(a."sC_CasDayL3_b0") AS NUMERIC) AS "sCt_CasDay_ser_b0",
CAST(SUM(a."sC_CasDayL4_b0") AS NUMERIC) AS "sCt_CasDay_crit_b0",
CAST(SUM(a."sC_CasNightL1_b0") AS NUMERIC) AS "sCt_CasNit_min_b0",
CAST(SUM(a."sC_CasNightL2_b0") AS NUMERIC) AS "sCt_CasNit_mod_b0",
CAST(SUM(a."sC_CasNightL3_b0") AS NUMERIC) AS "sCt_CasNit_ser_b0",
CAST(SUM(a."sC_CasNightL4_b0") AS NUMERIC) AS "sCt_CasNit_crit_b0",
